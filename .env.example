# ─── Bot / Entra ID (required) ───────────────────────────────────────────────
MICROSOFT_APP_ID=
MICROSOFT_APP_PASSWORD=
MICROSOFT_APP_TENANT_ID=

# ─── Azure Communication Services (required) ─────────────────────────────────
ACS_CONNECTION_STRING=

# ─── Authentication Mode ──────────────────────────────────────────────────────
# Choose how the app authenticates to Azure OpenAI / Whisper.
#   entra  - Use Entra ID (service principal client_credentials). Recommended for
#            production. Requires MICROSOFT_APP_ID / PASSWORD / TENANT_ID above.
#            WHISPER_KEY and AZURE_OPENAI_API_KEY are NOT used in this mode.
#   apikey - Use API keys. Simpler for local dev without a service principal.
#            WHISPER_KEY and AZURE_OPENAI_API_KEY are REQUIRED in this mode.
AZURE_AUTH_MODE=entra

# ─── Azure OpenAI - Whisper speech-to-text ───────────────────────────────────
WHISPER_ENDPOINT=
WHISPER_KEY=                    # required when AZURE_AUTH_MODE=apikey

# ─── Azure OpenAI - GPT summarization ────────────────────────────────────────
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=           # required when AZURE_AUTH_MODE=apikey
AZURE_OPENAI_DEPLOYMENT_NAME=

# ─── App config ───────────────────────────────────────────────────────────────
SUMMARY_INTERVAL_MINUTES=5
CALLBACK_URI=
